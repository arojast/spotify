{% extends 'base.html.twig' %}

{% block title %} {{ title }} {% endblock %}

{% block body %}

<div class="jumbotron">
    <a href="{{ path('index') }}" class="btn-lg btn-primary">Ver nuevos lanzamientos</a>
    <br><br>

    <div class="card mb-3" style="max-width: 540px;">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="{{ artist.images[0].url }}" class="card-img" alt="...">
            </div>
            <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">{{ artist.name }}</h5>
                <p class="card-text">Generos:
                    <br>
                    {% for genre in artist.genres %}
                        <small class="text-muted">
                            {{ genre }}
                        </small><br>
                    {% endfor %}
                </p>
            </div>
            </div>
        </div>
    </div>
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col">Foto</th>
                <th scope="col">Album</th>
                <th scope="col">Canci√≥n</th>
            </tr>
        </thead>
        <tbody>
            {% for track in artist.tracks %}
                <tr>
                    <td>
                        <img src="{{ track.album.images[0].url }}" class="img-thumbnail rounded" width="200"/>
                    </td>
                    <td>{{ track.album.name }}</td>
                    <td>{{ track.name }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}